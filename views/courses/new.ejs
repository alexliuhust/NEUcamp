<%- include("../partials/header") %>
<!-- The new page for Courses! -->
<div class="container">
	<div class="row">
		<h1>Come here and Add a Course!</h1>

		<div class="myForm">
			<form action="/courses" method="POST">
				<div class="form-group">
					<label>Course Code*</label>
					<input class="form-control" type="text" name="course[number]" placeholder="Course Number" required>
				</div>
				<div class="form-group">
					<label>Name</label>
					<input class="form-control" type="text" name="course[name]" placeholder="Course Name" required>
				</div>
				
				<div class="form-group">
					<label>Day 1*</label>
					<select class="form-control" name="course[Time][0][day]" required>
						<option>Monday</option>
						<option>Tuesday</option>
						<option>Wednesday</option>
						<option>Thursday</option>
						<option>Friday</option>
						<option>Saturday</option>
						<option>Sunday</option>
					</select>
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="course[Time][0][time]" placeholder="Time" required>
				</div>
				<div class="form-group">
					<label>Day 2</label>
					<select class="form-control" name="course[Time][1][day]">
						<option></option>
						<option>Monday</option>
						<option>Tuesday</option>
						<option>Wednesday</option>
						<option>Thursday</option>
						<option>Friday</option>
						<option>Saturday</option>
						<option>Sunday</option>
					</select>
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="course[Time][1][time]" placeholder="Time">
				</div>
				<div class="form-group">
					<label>Day 3</label>
					<select class="form-control" name="course[Time][2][day]">
						<option></option>
						<option>Monday</option>
						<option>Tuesday</option>
						<option>Wednesday</option>
						<option>Thursday</option>
						<option>Friday</option>
						<option>Saturday</option>
						<option>Sunday</option>
					</select>
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="course[Time][2][time]" placeholder="Time">
				</div>
				
				<div class="form-group">
					<label>Building*</label>
					<select class="form-control" name="course[building]" required>
						
						<% building.forEach(function(part) { %>
							<option><%= part.name %></option>
						<% }); %>
						
					</select>
				</div>
				<div class="form-group">
					<label>Classroom*</label>
					<input class="form-control" type="text" name="course[classroom]" placeholder="Classroom" required>
				</div>
				
				<div class="form-group">
					<button class="btn btn-primary btn-lg btn-block">Submit</button>
				</div>
			</form>
			<a href="/courses">Go Back</a>
		</div>
		

		
	</div>
	
	
	
</div>

<%- include("../partials/footer") %>


