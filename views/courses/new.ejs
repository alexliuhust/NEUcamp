<%- include("../partials/header") %>
<!-- The new page for Courses! -->
<div class="container">
	<div class="row">
		<h1>Come here and Add a Course!</h1>

		<div class="myForm">
			<form action="/courses" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="course[number]" placeholder="Course Number" required>
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="course[name]" placeholder="Course Name" required>
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="course[day]" placeholder="Day(s)" required>
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="course[time]" placeholder="Time" required>
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="course[classroom]" placeholder="Classroom" required>
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-lg btn-block">Submit</button>
				</div>
			</form>
			<a href="/courses">Go Back</a>
		</div>
		

		
	</div>
	
	
	
</div>

<%- include("../partials/footer") %>


