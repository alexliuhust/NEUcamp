<%- include("../partials/header") %>

<div class="container InfoCon">
	<div class="row">
		<div class="myForm">
			
			<div class="col-xs-12">
				<div class="thumbnail">
					<div class="caption-full">
						<h2><%= course.number %> - <strong><%= course.name %></strong></h2>
						<h4>
							<strong>Day And Time: </strong>
						</h4>
						<ul>
							<% course.Time.forEach(function(part) { %>
								<% if(part.day != "" && part.time != "") { %>
									<li><%= part.day %> - <%= part.time %></li>
								<% } %>
									
							<% }); %>
						</ul>
						<h4>
							<strong>Location: </strong><%= course.building %> - <%= course.classroom %>
						</h4>
						
						
						<a class="btn btn-info" href="/buildings/<%= building._id %>">Building Info</a>
					</div>
					
					
					
				</div>
				<div class="buttonsDiv">
					<a class="btn btn-sm btn-warning" href="/courses/<%= course._id %>/edit">EDIT</a>
					<form action="/courses/<%= course._id %>?_method=DELETE" method="POST" id="deleteForm">
						<button type="submit" class="btn btn-sm btn-danger">DELETE</button>
					</form>
				</div>
				
			</div>
			
		</div>
		
	</div>
	<a href="/courses">Go Back</a>
</div>






<%- include("../partials/footer") %>



