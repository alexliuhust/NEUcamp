<%- include("../partials/header") %>
<!-- The edit page for Courses! -->
<div class="container">
	<div class="row">
		<h1>EDIT THE COURSE:</h1>
		<h4><%= course.number %> - <%= course.name %></h4>

		<div class="myForm">
			<form action="/courses/<%= course._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<label>Course Code*</label>
					<input class="form-control" type="text" name="course[number]" value="<%= course.number %>" required>
				</div>
				<div class="form-group">
					<label>Name*</label>
					<input class="form-control" type="text" name="course[name]" value="<%= course.name %>" required>
				</div>
				
				<div class="form-group">
					<label>Day 1*</label>
					<select class="form-control" name="course[Time][0][day]" required>
						<option>Monday</option>
						<option>Tuesday</option>
						<option>Wednesday</option>
						<option>Thursday</option>
						<option>Friday</option>
						<option>Saturday</option>
						<option>Sunday</option>
					</select>
				</div>
				<div class="form-group">
					<label>Time 1*</label>
					<input class="form-control" type="text" name="course[Time][0][time]" value="<%= course.Time[0].time %>" required>
				</div>
				<div class="form-group">
					<label>Day 2</label>
					<select class="form-control" name="course[Time][1][day]">
						<option></option>
						<option>Monday</option>
						<option>Tuesday</option>
						<option>Wednesday</option>
						<option>Thursday</option>
						<option>Friday</option>
						<option>Saturday</option>
						<option>Sunday</option>
					</select>
				</div>
				<div class="form-group">
					<label>Time 2</label>
					<input class="form-control" type="text" name="course[Time][1][time]" value="<%= course.Time[1].time %>">
				</div>
				<div class="form-group">
					<label>Day 3</label>
					<select class="form-control" name="course[Time][2][day]">
						<option></option>
						<option>Monday</option>
						<option>Tuesday</option>
						<option>Wednesday</option>
						<option>Thursday</option>
						<option>Friday</option>
						<option>Saturday</option>
						<option>Sunday</option>
					</select>
				</div>
				<div class="form-group">
					<label>Time 3</label>
					<input class="form-control" type="text" name="course[Time][2][time]" value="<%= course.Time[2].time %>">
				</div>
				
				<div class="form-group">
					<label>Building*</label>
					<select class="form-control" name="course[building]" required>
						
						<% building.forEach(function(part) { %>
							<option><%= part.name %></option>
						<% }); %>
						
					</select>
				</div>
				<div class="form-group">
					<label>Classroom*</label>
					<input class="form-control" type="text" name="course[classroom]" value="<%= course.classroom %>" required>
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-lg btn-block">Edit</button>
				</div>
			</form>
			<a href="/courses">Go Back</a>
		</div>
		

		
	</div>
	
	
	
</div>

<%- include("../partials/footer") %>

