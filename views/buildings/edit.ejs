<%- include("../partials/header") %>

<div class="container">
<div class="row">
	<h2>This is the Administrators Page!</h2>
	<h2>If you are not an Administrators, get out Now!</h2>
	
	<h1>Edit <%= building.name %></h1>

	<div class="myForm">
		<form action="/buildings/<%= building._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<label>Name</label>
				<input class="form-control" type="text" name="building[name]" value="<%= building.name %>" required>
			</div>
			<div class="form-group">
				<label>Image URL</label>
				<input class="form-control" type="text" name="building[image]" value="<%= building.image %>" required>
			</div>	
			<div class="form-group">
				<label>Description</label>
				<input class="form-control" type="text" name="building[description]" value="<%= building.description %>" required>
			</div>
			<div class="form-group">
				<label>Location URL</label>
				<input class="form-control" type="text" name="building[location]" value="<%= building.location %>" required>
			</div>
			
			<div class="form-group">
				<button class="btn btn-primary btn-lg btn-block">Update</button>
			</div>
		</form>
		
		<a href="/buildings">Go Back</a>
	</div>


</div>
</div>





<%- include("../partials/footer") %>



