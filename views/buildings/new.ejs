<%- include("../partials/header") %>

<div class="container">
<div class="row">
	<div class="alert alert-danger" role="alert">
		<h2>This is the Administrators Page! If you are not an Administrator, get out Now!</h2>
	</div>
	
	<h1>Add a new building</h1>

	<div class="myForm">
		<form action="/buildings" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="building[name]" placeholder="Name" required>
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="building[image]" placeholder="Image URL" required>
			</div>	
			<div class="form-group">
				<input class="form-control" type="text" name="building[description]" placeholder="description" required>
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="building[location]" placeholder="location URL" required>
			</div>
			
			<div class="form-group">
				<button class="btn btn-primary btn-lg btn-block">ADD</button>
			</div>
		</form>
		
		<a href="/buildings">Go Back</a>
	</div>


</div>
</div>





<%- include("../partials/footer") %>





